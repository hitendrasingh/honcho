%h1 
  = "Listing #{resource_name}"
%table
  %thead
    %tr
      - klass.table_attributes.each do |attribute|
        %th
          = attribute
      %th
      %th
      %th

  %tbody
    - @resources.each do |resource|
      %tr
        - resource.table_attributes.each do |k,v|
          %td= v
        %td= link_to 'Show', honcho.send("#{singularize_resource}_path",resource.id)
        %td= link_to 'Edit', resource_url("edit", resource)
        %td= link_to 'Destroy', honcho.send("#{singularize_resource}_path", resource.id), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to "New #{resource_name}", honcho.send("new_#{singularize_resource}_path")
